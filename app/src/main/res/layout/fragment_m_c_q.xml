<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.MCQFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which one is not a nickname of a version of Andriod?"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="A) Answer"
                android:textSize="20sp"
                android:textColor="#DFFFFFFF"
                android:background="@drawable/outline_box"
                android:padding="15dp"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_radio_button_unchecked_24_white"
                android:focusable="true" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="B) Answer"
                android:textSize="20sp"
                android:textColor="#DFFFFFFF"
                android:background="@drawable/outline_box"
                android:padding="15dp"
                android:clickable="true"
                android:drawableEnd="@drawable/ic_baseline_radio_button_unchecked_24_white"
                android:focusable="true" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/option3"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="C) Answer"
                android:textSize="20sp"
                android:textColor="#DFFFFFFF"
                android:background="@drawable/outline_box"
                android:padding="15dp"
                android:drawableEnd="@drawable/ic_baseline_radio_button_unchecked_24_white"
                android:focusable="true" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/option4"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:text="D) Answer"
                android:textSize="20sp"
                android:textColor="#DFFFFFFF"
                android:background="@drawable/outline_box"
                android:padding="15dp"
                android:drawableEnd="@drawable/ic_baseline_radio_button_unchecked_24_white"
                android:focusable="true" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>